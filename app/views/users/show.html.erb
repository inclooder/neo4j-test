<div class="user">
  <div class="profile">
    <ul>
      <li>Name: <%= user.name %></li>
      <li>Email: <%= user.email %></li>
      <li>First name: <%= user.first_name %></li>
      <li>Last name: <%= user.last_name %></li>
      <li>Age: <%= user.age %></li>
      <li>Tweets: <%= user.tweets.count %></li>
      <li>Followers: <%= user.followers.count %></li>
      <li>Followees: <%= user.followees.count %></li>
    </ul>
    <% if is_following %>
      <%= button_to 'Unfollow', followership_path(user.name), method: :delete  %>
    <% else %>
      <%= form_tag(followerships_path) do %>
        <%= hidden_field_tag :followee_name, user.name %>
        <%= submit_tag("Follow") %>
      <% end %>
    <% end %>
  </div>
  <%= render partial: 'tweets/list', locals: { tweets: tweets } %>
</div>
